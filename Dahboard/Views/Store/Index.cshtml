<div class="row">
    <div class="col-xs-12">
        <div class="box" id="containerStore">
            <div class="box-header">
                <div class="row text-center">
                    <h3 class="text-center org">المخازن</h3>
                </div>
                <div class="row">
                    <div class="col-md-2">
                        <button class="btn-org btn-block font-16 font-600 float-left" data-toggle="modal" data-target="#exampleModal" autofocus>اضافه</button>
                    </div>
                </div>
            </div><!-- /.box-header -->
            <!-- Modal For Add -->
            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title text-center org" id="exampleModalLabel">اضافه مخزن</h4>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <label for="store_name" class="label-control fayroz">اسم المخزن</label>
                            <input type="text" onkeypress=PressEnter(event,'btnSaveStore') onkeydown="clearWarningMsg('#validStoreName')" class="form-control border-radius-5 border-fayroz" id="store_name" autofocus autocomplete="off" />
                            <p class="text-danger" id="validStoreName"></p>

                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn-org" id="btnSaveStore" onclick="AddStore();">حفظ</button>
                            <button type="button" class="btn-grey" data-dismiss="modal">الغاء</button>
                        </div>
                    </div>
                </div>
            </div>
            <!----------------------------------------------------->
            <!-----end modal for Add-->
            <div class="box-body">
                <table id="example2" class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>الاسم</th>
                            <th>تعديل</th>
                            <th>حذف</th>
                        </tr>
                    </thead>
                    <tbody id="store_data" class="text-bold">
                    </tbody>
                    <tfoot>

                    </tfoot>
                </table>
            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </div>
</div>
