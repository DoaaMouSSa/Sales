<style>
    .absolute {
        position: absolute;
        z-index: 1;
    }

    .relative {
        position: relative;
    }
</style>


<div class="row">
    <div class="col-xs-12">
        <div class="box" id="container">
            <div class="box-header">
                <div class="row text-center">
                    <h3 class="text-center org">الأقسام</h3>
                </div>
                <div class="row">
                    <div class="col-md-2">
                        <button class="btn-org btn-block font-16 font-600 float-left" data-toggle="modal" data-target="#exampleModal" autofocus>قسم جديد</button>
                    </div>
                    <div class="col-md-2">
                        <a class="btn-green btn-block font-16 font-600 text-center" asp-controller="SubCategory"
                           asp-action="Index">التصنيف</a>
                    </div>
                </div>
                @*<i class="fa fa-user icon absolute"></i>
                    <input class='relative' style='width: 24px; height: 31px;caret-color: transparent;'>*@
            </div><!-- /.box-header -->
            <!-- Modal For Add -->
            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title text-center org" id="exampleModalLabel">اضافه قسم</h4>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="form-group">
                                <label for="cat_name" class="control-label fayroz">اسم القسم</label>
                                <input dir='rtl' onkeypress=PressEnter(event,'btnSave') onkeydown="clearWarningMsg('#validCatName')" type="text" class="form-control border-radius-5 border-fayroz" id="cat_name" autocomplete="off" autofocus />
                                <p class="text-danger" id="validCatName"></p>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn-org" onclick="AddCat();" id="btnSave">حفظ</button>
                            <button type="button" class="btn-grey" data-dismiss="modal">الغاء</button>
                        </div>
                    </div>
                </div>
            </div>
            <!----------------------------------------------------->
            <!-----end modal for Add-->
            <div class="box-body">
                <table id="categoryTbl" class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>الاسم</th>
                            <th>تعديل</th>
                            <th>حذف</th>
                        </tr>
                    </thead>
                    <tbody id="cat_data" class="text-bold">
                    </tbody>
                    <tfoot>
                      
                    </tfoot>
                </table>
            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.16.2/xlsx.full.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
